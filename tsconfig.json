{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext"],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src", 
    "removeComments": true,
    "strict": true, 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules/**", "dist"]
}
